        <ToggleButton
            android:id="@+id/btnCheckPass2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/check_pass"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="@+id/edtNhapLaiMatKhau_profile"
            app:layout_constraintEnd_toEndOf="@+id/edtNhapLaiMatKhau_profile"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@+id/edtNhapLaiMatKhau_profile"
            app:layout_constraintTop_toTopOf="@+id/edtNhapLaiMatKhau_profile" />

        <Button
            android:id="@+id/btnHuyChangeThongTin_profile"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_border_button"
            android:text="Cancel"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTenNguoiDung_profile" />

        <Button
            android:id="@+id/btnChangeThongTin_profile"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_border_button"
            android:text="change"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnHuyChangeThongTin_profile"
            app:layout_constraintTop_toBottomOf="@+id/edtTenNguoiDung_profile" />

        <ToggleButton
            android:id="@+id/btnCheckPass"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/check_pass"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="@+id/edtMatKhau_profile"
            app:layout_constraintEnd_toEndOf="@+id/edtMatKhau_profile"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@+id/edtMatKhau_profile"
            app:layout_constraintTop_toTopOf="@+id/edtMatKhau_profile" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="10dp"
            android:text="Thay đổi thông tin"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
